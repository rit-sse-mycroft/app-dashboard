body
  padding-top: 70px

@media (min-width: 768px)
  #sidebar
    position: fixed
    padding-top: 70px !important

#sidebar
  top: 0
  left: 0
  bottom: 0
  z-index: 1000
  display: block
  padding: 20px 20px 20px
  background-color: #f5f5f5
  border-right: 1px solid #eee

/* Sidebar navigation */
.nav-sidebar
  margin-left: -20px
  margin-right: -21px /* 20px padding + 1px border */
  margin-bottom: 20px

.nav-sidebar > li > a
  padding-left: 20px
  padding-right: 20px

.nav-sidebar > .active > a
  color: #fff
  background-color: #428bca

